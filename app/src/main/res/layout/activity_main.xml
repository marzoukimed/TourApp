<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="399dp"
        android:layout_height="342dp"
        android:layout_margin="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.665">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="WELCOME"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorPrimary"
            android:textColorHint="#02FFFFFF"
            app:met_baseColor="@android:color/widget_edittext_dark"
            app:met_iconLeft="@drawable/ic_user"
            app:met_iconPadding="0dp"
            app:met_primaryColor="@android:color/widget_edittext_dark"
            app:met_textColorHint="#FCAFAFAF" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/material_on_primary_emphasis_high_type"
            android:textColorHint="#03FFFFFF"
            app:met_baseColor="@android:color/widget_edittext_dark"
            app:met_iconLeft="@drawable/ic_user"
            app:met_iconPadding="10dp"
            app:met_primaryColor="@android:color/widget_edittext_dark"
            app:met_textColorHint="#AFAFAF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton

                android:id="@+id/register_button"
                Style="@style/Widget.MaterialComponents.Button"
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:text="SignUp"
                android:textColor="#FFFF"
                android:textSize="18sp" />

            <com.google.android.material.button.MaterialButton

                android:id="@+id/login_button"
                Style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:text="Login"
                android:textColor="#FFFF"
                android:textSize="18sp" />


        </LinearLayout>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/loginf_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>







