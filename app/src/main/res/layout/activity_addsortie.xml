<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addsortie">


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/dt_db"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginBottom="32dp"
        android:hint="Select Date to Start"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/dt_fin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:met_baseColor="@android:color/white"
        app:met_iconLeft="@drawable/ic_user"
        app:met_iconPadding="0dp"
        app:met_primaryColor="@android:color/white"
        app:met_textColorHint="#AFAFAF"
        tools:ignore="MissingConstraints" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/dt_fin"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginBottom="8dp"
        android:hint="dt_fin"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/loc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.918"
        app:met_baseColor="@android:color/white"
        app:met_iconLeft="@drawable/ic_user"
        app:met_iconPadding="0dp"
        app:met_primaryColor="@android:color/white"
        app:met_textColorHint="#AFAFAF"
        tools:ignore="MissingConstraints" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/loc"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginBottom="236dp"
        android:hint="location"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:met_baseColor="@android:color/white"
        app:met_iconLeft="@drawable/ic_user"
        app:met_iconPadding="0dp"
        app:met_primaryColor="@android:color/white"
        app:met_textColorHint="#AFAFAF"
        tools:ignore="MissingConstraints" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/uem"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:hint="user_email"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/dt_db"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.758"
        app:met_baseColor="@android:color/white"
        app:met_iconLeft="@drawable/ic_user"
        app:met_iconPadding="0dp"
        app:met_primaryColor="#EC0D0D"
        app:met_textColorHint="#9C27B0"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />


    <com.google.android.material.button.MaterialButton

        android:id="@+id/addsortie"
        Style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="ADD YOURS"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loc"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>